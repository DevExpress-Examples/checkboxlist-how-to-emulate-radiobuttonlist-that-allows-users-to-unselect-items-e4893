@{
    ViewBag.Title = "Index";
}

<script type="text/javascript">
    function OnCBLSelectedIndexChanged(s, e) {
        s.UnselectAll();
        if (e.isSelected)
            s.SetSelectedIndex(e.index);
        else
            s.UnselectIndices(e.index);
    }
</script>


